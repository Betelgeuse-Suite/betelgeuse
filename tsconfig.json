{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2015"],
    "outDir": "build",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ]
}
